{
  "name": "name_of_my_taskrunner",
  "version": "1.0.0",
  "description": "A Task Runner Made by webpack and npm scripts",
  "keywords": [
    "webpack",
    "sass",
    "npm scripts"
  ],
  "homepage": "https://github.com/xxxxx",
  "bugs": "https://github.com/xxxxx/issues",
  "author": {
    "name": "Yukihiro Hoshide",
    "email": "yukihiro.hoshide@gmail.com",
    "web": "http://portfolio.eggplant.work"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/xxxx"
  },
  "license": "MIT",
  "scripts": {
    "//": "webpack",
    "webpack:build": "webpack -d --display-modules --display-error-details",
    "webpack:watch": "webpack -w -d",
    "start": "run-p webpack:watch build:* bs",
    "build:clean": "rimraf ./dist",
    "build:copy": "cpx \"./src/**/!(*.js|*.css|*.map|*.scss|*.png|*.jpg|*.svg|*.gif)\" ./dist/",
    "bs": "browser-sync start --config bs-config.js",
    "lint:css": "stylelint src/assets/scss/**/*.scss",
    "lint:js": "eslint src/assets/js/**/*.js",
    "production": "npm-run-all -s clean copy -p css pug imagemin js webpack:build"
  },
  "dependencies": {
    "global": "^4.3.2",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "mustache": "^2.3.0",
    "vue": "^2.4.4",
    "yarn": "^1.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "bourbon": "^4.3.4",
    "bourbon-neat": "^1.9.0",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "copy-webpack-plugin": "^4.1.0",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "csscomb": "^4.2.0",
    "csscomb-loader": "^0.0.2",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-webpack-plugin": "^1.5.2",
    "node-bourbon": "^4.2.8",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.1.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-notifier": "^1.5.0"
  }
}
